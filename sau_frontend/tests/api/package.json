{
  "name": "sau-api-tests",
  "version": "1.0.0",
  "description": "SAU自媒体自动化运营系统API测试",
  "main": "index.js",
  "scripts": {
    "test:api": "jest tests/api --testPathPattern=tests/api",
    "test:api:watch": "jest tests/api --watch",
    "test:api:coverage": "jest tests/api --coverage",
    "test:api:integration": "jest tests/api/integration --testPathPattern=integration",
    "test:api:e2e": "playwright test tests/api/e2e",
    "test:all": "npm run test:api && npm run test:api:e2e"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "supertest": "^6.3.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "cross-env": "^7.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/api/**/*.test.js",
      "**/tests/api/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "tests/api/**/*.js",
      "!tests/api/fixtures/**",
      "!tests/api/utils/**"
    ],
    "coverageDirectory": "coverage/api",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": ["./tests/api/setup.js"],
    "testTimeout": 30000,
    "verbose": true
  }
}