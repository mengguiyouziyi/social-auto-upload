# =============================================================================
# 社交媒体自动上传系统 - 环境配置模板
# =============================================================================

# =============================================================================
# 应用基础配置
# =============================================================================
FLASK_APP=run_backend.py
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here
BASE_DIR=/app

# =============================================================================
# 数据库配置
# =============================================================================
DATABASE_URL=sqlite:///db/database.db
# PostgreSQL 配置示例:
# DATABASE_URL=postgresql://username:password@localhost:5432/social_upload

# =============================================================================
# 服务器配置
# =============================================================================
HOST=0.0.0.0
PORT=5409

# =============================================================================
# AI 服务配置
# =============================================================================
# OpenAI 配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# 百度文心一言配置
BAIDU_API_KEY=your-baidu-api-key
BAIDU_SECRET_KEY=your-baidu-secret-key

# 阿里云通义千问配置
DASHSCOPE_API_KEY=your-dashscope-api-key

# 智谱AI配置
ZHIPUAI_API_KEY=your-zhipuai-api-key

# =============================================================================
# 平台认证配置
# =============================================================================
# 抖音配置
DOUYIN_COOKIE_PATH=cookies/douyin.json
DOUYIN_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# 小红书配置
XHS_COOKIE_PATH=cookies/xhs.json
XHS_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# B站配置
BILIBILI_COOKIE_PATH=cookies/bilibili.json
BILIBILI_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# =============================================================================
# 文件存储配置
# =============================================================================
UPLOAD_DIR=uploads
MAX_CONTENT_LENGTH=1073741824  # 1GB
ALLOWED_EXTENSIONS=mp4,avi,mov,jpg,jpeg,png,gif

# =============================================================================
# 缓存配置
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_TIMEOUT=3600

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# 安全配置
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24小时
CORS_ORIGINS=*

# =============================================================================
# 邮件配置 (可选)
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# 监控配置 (可选)
# =============================================================================
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_METRICS=True

# =============================================================================
# 开发配置
# =============================================================================
# 前端开发服务器
VITE_DEV_PORT=5173
VITE_API_BASE_URL=http://localhost:5409

# =============================================================================
# 生产配置
# =============================================================================
# 生产环境请将 DEBUG 设置为 False
# DEBUG=False

# 生产环境 CORS 配置
# CORS_ORIGINS=https://yourdomain.com

# 生产环境数据库连接池
# DATABASE_POOL_SIZE=20
# DATABASE_MAX_OVERFLOW=30